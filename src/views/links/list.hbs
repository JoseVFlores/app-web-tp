<div class="text-center">
  <h1>Actividades Registradas</h1>
</div>
<div class="table-responsive">
  <table data-toggle="table" class="table table-striped table-bordered table-hover" data-sort-name="id" data-sort-order="desc">
    <thead>
      <tr>
        <th data-field="id" data-sortable="true" scope="col">Id</th>
        <th scope="col">Tipo de Actividad</th>
        <th scope="col">Actividad célula</th>
        <th scope="col">Promotores</th>
        <th data-field="Coach" data-sortable="true" scope="col">Coach</th>
        <th format="DD/MM/YYYY" scope="col">Fecha</th>
        <th scope="col">Entrada</th>
        <th scope="col">Salida</th>
        <th scope="col">Coord Inicial</th>
        <th scope="col">Coord Final</th>
        <th scope="col">Distrito</th>
        <th scope="col">Act Esp</th>
        <th scope="col">Comentarios</th>
        <th scope="col">Creado</th>
        <th scope="col">Incidencias</th>
        <th scope="col">Detalle</th>

      </tr>
    </thead>
    <tbody>
      {{#each linksp}}
      <tr>
        <th scope="row">{{id}}</th>
        <td>{{tipo_act}}</td>
        <td>{{actividad}}</td>
        <td>{{num_promotores}}</td>
        <td>{{namecoach}}</td>
        <td>{{moment fecha_act "DD/MM/YYYY"}}</td>
        <td>{{Hentrada}}</td>
        <td>{{Hsalida}}</td>
        <td>{{coord}}</td>
        <td>{{coord2}}</td>
        <td>{{url}}</td>
        <td>{{especiales}}</td>
        <td>{{descripcion}}</td>
        <td>{{timeago created_at}}</td>
        {{#if estatus_plan}}
        <td>
        Actividad aprobada
        </td>
        {{else}}
        <td>
        <a href="/links/delete/{{id}}" class="btn btn-outline-success btn-sm  btn-block"style="width: 100%">Aprobar</a>
        <a href="/links/add2/{{id}}" class="btn btn-outline-warning btn-sm  btn-block"style="width: 100%">Editar</a>
        </td>
        {{/if}}
        <td>{{incidencia}}</td>
      </tr>
      {{else}}
      <tr>
        <td class="text-center" colspan="15">Aún no tienes registros.<br><a class="btn btn-secondary"
            href="/links/add">Ingresa tu primer registro.</a></br< /td>
      </tr>
      {{/each}}

    </tbody>
  </table>
 
