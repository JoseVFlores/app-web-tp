<div class="text-center">
  <h1>Actividades Registradas</h1>
</div>

<table  data-toggle="table" class="table table-striped table-bordered" data-sort-name="id" data-sort-order="desc">
  <thead>
    <tr>
      <th data-field="id" data-sortable="true" scope="col">Id</th>
      <th scope="col">Actividad</th>
      <th scope="col">Coach</th>
      <th format="DD/MM/YYYY" scope="col">Fecha</th>
      <th scope="col">Entrada</th>
      <th scope="col">Salida</th>
      <th scope="col">Creado</th>
      <th scope="col">Incidencias</th>
      <th scope="col">Detalle</th>

    </tr>
  </thead>
  <tbody>
    
    {{#each links}}
    <tr>
      <th scope="row">{{id}}</th>
      <td>{{actividad}}</td>
      <td>{{coach}}</td>
      <td>{{moment fecha_act "DD/MM/YYYY"}}</td>
      <td>{{Hentrada}}</td>
      <td>{{Hsalida}}</td>
      <td>{{timeago created_at}}</td>
      <td><a href="/links/edit/{{id}}">agregar</a></td>
      <td>{{incidencia}}</td>
    </tr>
    {{else}}
    <tr><td class="text-center" colspan="9">Aún no tienes registros.<br><a class="btn btn-secondary" href="/links/add">Ingresa tu primer registro.</a></br</td></tr>
    {{/each}}
      
  </tbody>
</table>




